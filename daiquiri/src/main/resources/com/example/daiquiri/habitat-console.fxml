<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.daiquiri.HabitatConsoleController"
            prefHeight="200.0" prefWidth="400.0">

    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <TextArea fx:id="commandTextArea" prefHeight="150.0" prefWidth="350.0" promptText="Введите команду здесь"/>
                <TextArea fx:id="responseTextArea" prefHeight="150.0" prefWidth="350.0" editable="false"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="executeButton" mnemonicParsing="false" text="Выполнить" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
